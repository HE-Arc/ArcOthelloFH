<UserControl x:Class="Othello.UI.MainMenuUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="83,40,87,43" HorizontalAlignment="Center" Width="130">
            <Label x:Name="lbl_title" Content="Othello" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontSize="24" Margin="0,0,0,25"/>

            <Button x:Name="btn_pvp" Content="Player vs Player" Margin="0,5" Click="btn_pvp_Click"/>
            <Button x:Name="btn_pvia" Content="Player vs IA" Margin="0,5" Click="btn_pvia_Click"/>
            <Button x:Name="btn_load" Content="Load" Margin="0,5"/>
            <Button x:Name="btn_options" Content="Options" Margin="0,5"/>
            <Button x:Name="btn_quit" Content="Quit" Margin="0,5" Click="btn_quit_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
