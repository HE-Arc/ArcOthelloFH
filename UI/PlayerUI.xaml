<UserControl x:Class="Othello.UI.PlayerUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.UI"
             mc:Ignorable="d" Height="288.068" Width="165.341">
    <Grid Background="Black">
        <Label x:Name="lbl_player" Content="Player :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="lbl_player_no" Content="{Binding SecondsElapsed}" HorizontalAlignment="Left" Margin="57,10,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Time :" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Foreground="White" />


    </Grid>
</UserControl>
