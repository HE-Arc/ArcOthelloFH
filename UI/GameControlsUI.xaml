<UserControl x:Class="Othello.UI.GameControlsUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.UI"
             mc:Ignorable="d" Height="52.841" Width="348.579">
    <Grid Margin="0,0,28,0">
        <StackPanel Margin="10,10,0,10" Orientation="Horizontal" HorizontalAlignment="Center" Width="300" VerticalAlignment="Center">
            <Button x:Name="lbl_end_turn" Content="End turn" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Click="lbl_end_turn_Click"/>
            <Button x:Name="lbl_undo" Content="Undo" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="lbl_save_game" Content="Save this game" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>

    </Grid>
</UserControl>
