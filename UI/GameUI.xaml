<UserControl x:Class="Othello.UI.GameUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel x:Name="MainDockPanel" Margin="10">
            <local:PlayerUI DockPanel.Dock="Left" Height="Auto" Width="130" HorizontalAlignment="Left"/>
            <local:PlayerUI DockPanel.Dock="Right" Height="Auto" Width="130" HorizontalAlignment="Right"/>
        </DockPanel>
    </Grid>
</UserControl>
